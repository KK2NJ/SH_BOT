FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /app

# Install system deps Playwright needs
RUN apt-get update && apt-get install -y \
    ca-certificates \
    wget \
    gnupg \
    libnss3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libxrandr2 \
    libxss1 \
    libgdk-pixbuf2.0-0 \
    libgtk-3-0 \
    libxcomposite1 \
    libxdamage1 \
    libdbus-1-3 \
    libgbm1 \
    libasound2 \
    libx11-xcb1 \
    fonts-liberation \
    libpangocairo-1.0-0 \
    libpango-1.0-0 \
  && rm -rf /var/lib/apt/lists/*

# Copy & install python deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Download Playwright browsers (with system dependencies)
# Use python -m playwright to be sure the CLI is available reliably
RUN python -m playwright install --with-deps chromium

# Copy app files
COPY . .

# Optional: set a fixed browsers path (makes caching easier)
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

CMD ["python","main.py"]
